<body>
	<% posts.each do |x| %>
	<ul>
		<li>
			<a href="/posts/<%= x["id"] %>"> "<%= x["title"] %>" 
			<br> 
			<b> Posted on: </b> <%= x["post_date"] %>
			<br>
			<b> TAGS: </b> <i> <%= x["tag"] %> </i> </a>
		</li>
	</ul>
		<% end %>
</body>
</html>